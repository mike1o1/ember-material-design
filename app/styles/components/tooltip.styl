md-tooltip
  position: absolute
  font-size: 14px
  z-index: $z-index-tooltip
  overflow: hidden
  pointer-events: none
  border-radius: 4px
  .md-background
    position: absolute
    border-radius: 50%
    transform: translate(-50%, -50%) scale(0)
    opacity: 0
    &.md-show
      transition: $swift-ease-out
      transform: translate(-50%, -50%) scale(1)
      opacity: 1
    &.md-hide
      transition: $swift-ease-in
      transform: translate(-50%, -50%) scale(0)
      opacity: 0
  .md-content
    position: relative
    max-width: 240px
    white-space: nowrap
    overflow: hidden
    text-overflow: ellipsis
    padding: 8px
    background: transparent
    opacity: 0
    &.md-show
      transition: $swift-ease-out
      opacity: 1
    &.md-hide
      transition: $swift-ease-in
      opacity: 0
  &.md-hide
    transition: $swift-ease-in
  &.md-show
    transition: $swift-ease-out
    pointer-events: auto
    transform: translate3d(0, 0, 0)
